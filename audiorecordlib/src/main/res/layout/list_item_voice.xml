<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_launcher" />

    <FrameLayout
        android:id="@+id/layoutLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/imageAvatar"
        android:background="@drawable/icon_voice_bg" >

        <View
            android:id="@+id/voiceAnim"
            android:layout_width="25dp"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/icon_voice_ripple"
            android:layout_height="25dp" />
    </FrameLayout>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/layoutLength"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:textColor="#777777"
        android:id="@+id/textLength"
        />

</RelativeLayout>