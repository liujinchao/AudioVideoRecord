<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.liujc.audiorecordlib">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 请求访问使用照相设备 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 录音权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application android:allowBackup="true" android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".audio.wechatAudioRecorde.AudioRecordActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".audio.waveAudioRecord.WaveAudioRecordActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".video.VideoRecordActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".video.PlayActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
